@model List<Product>

<h1>Products/List</h1>

<div class="row"
    <div class="col-6">
        <div class="card mb-3">
            <div class="col-md-4">
                <img src="~/img/@Model[0].productImage" class="img-fluid rounded-start" >
            </div>
            <div class="col-md-8">
                <div class="card-body">
                <h5 class="card-title">@Model[0].productName</h5>
                <p class="card-text">@Model[0].productDetail</p>
                <button class="btn btn-primary btn-sm">Detail</button>
            </div>
        </div>
    </div>
    @* İKİNCİ ÜRÜN *@
